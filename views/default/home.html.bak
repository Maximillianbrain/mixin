{{extend 'layout.html'}}

<!-- Blog Sidebar Widgets Column -->
<div class="col-md-3 col-sm-3">

    <!-- Create a Music Room -->
    <div class="well">
        <div class="container-fluid">
            <div class="row">
                <div class="mi-create-music-room col-lg-10 col-md-10 col-sm-10">
                  <h4 class="">Create a Music Room</h4>
                </div>
                <div class="mi-create-music-room col-lg-2 col-md-2 col-sm-2">
                    <button id="mi-create-music-room-button" class="btn btn-default btn-sm" type="button">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Friend List -->
    <div class="well">
        <h4 class="mi-h4-sm-adjustment">Friends List</h4>
        <div class="mi-friends-list">
          {{=friendlist}}
        </div>
        <!-- /.input-group -->
    </div>
</div>

<!-- Main Music Playlist Widget -->
<div class="col-md-6 col-sm-6">
    <div class="well mi-mixin-music-room-list">
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Your Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Your Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Your Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
    </div>
    <div class="well mi-mixin-music-room-list">
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Popular Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Popular Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Popular Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
    </div>
    <div class="well mi-mixin-music-room-list">
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Suggested Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Suggested Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
      <a href={{=URL('musicroom')}}>
        <div class="mi-music-room-link">
          Suggested Music Room
          <span class="glyphicon glyphicon-play"></span>
        </div>
      </a>
    </div>
</div>

<!-- Sidebar -->
<div class="col-md-3 col-sm-3">
    
<!-- Search for Friends -->
  <div class="well">
    <h4>Search for friends:</h4>
    {{=form}}
  </div>
  {{if people:}}
  <div class="well">
    <h3>Results</h3>
    <table>
      {{for user in people:}}
      <!-- Check if Already Friends -->

      <!-- Check if Friend Request Pending-->
        <tr class="mi-search-friends-tr">
          <td>{{=A(name_of(user), _href=URL('wall',args=user.id))}}</td>
          <td class="mi-search-friend-add">
            <button class="btn btn-sm btn-default" onclick="ajax('{{=URL('friendship',args=('request',user.id))}}',[],null);$(this).parent().html('')">
              <span class="glyphicon glyphicon-plus"></span>
            </button>
          </td>
        </tr>
      {{pass}}
    </table>
  </div>
  {{pass}}

</div>
